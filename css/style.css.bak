.UI{
    position:absolute;
	background-color: white;
	border: 2px solid #ccc;
}

.resource_list{
	background-color: white;
	border: 1px solid #999;
}
.resource{
	background-color: grey;
	border: 1px solid #999;
}
.resource_img{
	width: 30px;
	height: 30px;
}

.hide {
  display: none;
}

.resource:hover + .hide {
	position:absolute;
	display: block;
	color: red;
}
    