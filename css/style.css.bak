.upgrade_UI{
    position:absolute;
	background-color: white;
	border: 2px solid #ccc;
}

.resource_UI{
    position:absolute;
	top: 200px;
	left: 0px;
	background-color: white;
	border: 2px solid #ccc;
}


.resource_list{
	background-color: white;
	border: 1px solid #999;
}
.resource{
	background-color: grey;
	border: 1px solid #999;
	font-size: 25px;
}
.resource_img{
	width: 30px;
	height: 30px;
}

.blocked {
	background-color: rgba(130, 130, 130, 1);
}

.available {
	background-color: rgba(90, 90, 255, 1);
}

.upgrade_button {
    border: 0;
    line-height: 2.5;
    padding: 0 10px;
    font-size: 1rem;
    text-align: center;
    color: #fff;
    text-shadow: 1px 1px 1px #000;
    border-radius: 10px;
    background-image: linear-gradient(to top left,
                                      rgba(0, 0, 0, .2),
                                      rgba(0, 0, 0, .2) 30%,
                                      rgba(0, 0, 0, 0));
    box-shadow: inset 2px 2px 3px rgba(255, 255, 255, .6),
                inset -2px -2px 3px rgba(0, 0, 0, .6);
}

.upgrade_button:hover {
    border-radius: 5px;
}

.upgrade_button:active {
    box-shadow: inset -2px -2px 3px rgba(255, 255, 255, .6),
                inset 2px 2px 3px rgba(0, 0, 0, .6);
}